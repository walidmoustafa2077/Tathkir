<UserControl x:Class="Tathkīr_WPF.Views.Dialogs.BaseDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF.Views.Dialogs"
             mc:Ignorable="d"
             Foreground="#1199DD">

    <Border CornerRadius="12"
            Effect="{StaticResource MaterialDesignShadowDepth2}"
            Background="{Binding DialogBackground}"
            BorderBrush="{StaticResource MaterialDesignLightSeparatorBackground}"
            BorderThickness="4"
            Padding="18"
            MinWidth="240">

        <StackPanel>
            <Grid>
                <TextBlock Text="{Binding Title}"
                           Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <Button Content="X"
                        Width="32"
                        Height="32"
                        Margin="0 0 0 3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Click="Button_Click"
                        Style="{StaticResource MaterialDesignFlatButton}">
                </Button>
            </Grid>

            <TextBlock Text="{Binding Message}"
                       Margin="0,6,0,18"
                       HorizontalAlignment="Center"
                       Style="{StaticResource MaterialDesignBodyMediumTextBlock}" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="{Binding SecondaryButton}"
                        Command="{Binding SecondaryButtonCommand}"
                        Visibility="{Binding SecondaryButtonVisibility, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="0,0,10,0"
                        MinWidth="100"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Style="{StaticResource MaterialDesignFlatButton}" />

                <Button Content="{Binding PrimaryButton}"
                        Command="{Binding PrimaryButtonCommand}"
                        MinWidth="100"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />

            </StackPanel>
        </StackPanel>

    </Border>
</UserControl>
