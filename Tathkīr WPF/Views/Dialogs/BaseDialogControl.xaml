<UserControl x:Class="Tathkīr_WPF.Views.Dialogs.BaseDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF.Views.Dialogs"
             mc:Ignorable="d">

    <Border CornerRadius="12"
            Background="White"
            Padding="18">

        <StackPanel>
            <TextBlock Text="{Binding Title}"
                       Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Message}"
                       Margin="0,6,0,12"
                       HorizontalAlignment="Center"
                       Style="{StaticResource MaterialDesignBodyMediumTextBlock}" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="{Binding SecondaryButton}"
                        Command="{Binding SecondaryButtonCommand}"
                        Visibility="{Binding SecondaryButtonVisibility, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="0,0,10,0"
                        MinWidth="100"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Style="{StaticResource MaterialDesignFlatButton}" />

                <Button Content="{Binding PrimaryButton}"
                        Command="{Binding PrimaryButtonCommand}"
                        MinWidth="100"
                        materialDesign:ButtonAssist.CornerRadius="8"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />

            </StackPanel>
        </StackPanel>

    </Border>
</UserControl>
