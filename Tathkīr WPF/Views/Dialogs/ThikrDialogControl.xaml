<UserControl x:Class="Tathkīr_WPF.Views.Dialogs.ThikrDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF.Views.Dialogs"
             mc:Ignorable="d">

    <Border CornerRadius="12"
            Background="White"
            Padding="18"
            MinWidth="400"
            MaxWidth="700"
            MaxHeight="500">

        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top"
                    CornerRadius="8"
                    Background="#E3E3E3"
                    Margin="0,0,0,12"
                    Padding="10">
                
                <DockPanel>
                    <TextBlock Text="{Binding Title}"
                               Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                               HorizontalAlignment="Center" />

                    <Button Content="X"
                            Width="32"
                            Height="32"
                            HorizontalAlignment="Right"
                            Margin="8,0,0,0"
                            Padding="0"
                            FontSize="18"
                            FontWeight="Bold"
                            Command="{Binding CloseDialog}"
                            Style="{StaticResource MaterialDesignFlatButton}">
                    </Button>
                </DockPanel>
            </Border>

            <!-- List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="8"
                                    Background="#F8F8F8"
                                    Margin="4"
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <!-- Buttons -->
                                        <ColumnDefinition Width="*" />
                                        <!-- Text content -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Right side: Counter + Reset -->
                                    <StackPanel Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="0 0 14 0"
                                                Height="100">
                                        <Button Content="{Binding Count}"
                                                Command="{Binding DecrementCountCommand}"
                                                Width="80"
                                                Height="50"
                                                Margin="0 12"
                                                Background="#2ECC71"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource MaterialDesignFlatSecondaryButton}">
                                        </Button>

                                        <Button Command="{Binding ResetDateCommand}"
                                                Width="25"
                                                Height="25"
                                                Style="{StaticResource MaterialDesignIconButton}"
                                                Foreground="Red"
                                                Visibility="{Binding ResetDateVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <materialDesign:PackIcon Kind="Restart"
                                                                     Width="20"
                                                                     Height="20" />
                                        </Button>
                                    </StackPanel>

                                    <!-- Left side: Text content -->
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center"
                                                MinHeight="80">
                                        <TextBlock Text="{Binding Content}"
                                                   TextWrapping="Wrap"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,12"
                                                   LineHeight="34"
                                                   LineStackingStrategy="BlockLineHeight"
                                                   FontFamily="pack://application:,,,/Resources/Fonts/#Amiri Quran" />
                                        <TextBlock Text="{Binding Description}"
                                                   Foreground="Gray"
                                                   FontSize="12"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
