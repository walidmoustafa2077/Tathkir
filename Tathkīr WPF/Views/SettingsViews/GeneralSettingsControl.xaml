<UserControl x:Class="Tathkīr_WPF.Views.SettingsViews.GeneralSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tathkīr_WPF.Views.SettingsViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20"
                    Orientation="Vertical">

            <!-- Personalization -->
            <GroupBox Header="Personalization"
                      Margin="0 12"
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <StackPanel Orientation="Vertical">
                    <ComboBox Height="40"
                              Padding="4"
                              Margin="12 6"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Language" />
                    
                    <ComboBox Height="40"
                              Padding="4"
                              Margin="12 6"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Select Theme" />
                </StackPanel>
            </GroupBox>

            <!-- Behavior -->
            <GroupBox Header="Behavior"
                      Margin="0 12"
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <StackPanel Margin="10">
                    <DockPanel Margin="0 0 0 6">
                        <TextBlock Text="Launch on system startup"
                                   VerticalAlignment="Center"
                                   Margin="0 0 12 0"
                                   Style="{StaticResource MaterialDesignBodyMediumTextBlock}" />

                        <ToggleButton HorizontalAlignment="Right"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                    </DockPanel>
                    
                    <DockPanel Margin="0 6 0 0">
                        <TextBlock Text="Show notifications" 
                                   VerticalAlignment="Center" 
                                   Margin="0 0 12 0"
                                   Style="{StaticResource MaterialDesignBodyMediumTextBlock}"/>
                        
                        <ToggleButton HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                    </DockPanel>
                </StackPanel>
            </GroupBox>

            <!-- Privacy & Info -->
            <GroupBox Header="PrivacyInfo"
                      Margin="0 12"
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <StackPanel Margin="10">
                    <Button Content="Privacy Settings"
                            Margin="0 6" />
                    <Button Content="About"
                            Margin="0 6" />
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
