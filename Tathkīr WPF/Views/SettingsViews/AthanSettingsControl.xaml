<UserControl x:Class="Tathkīr_WPF.Views.SettingsViews.AthanSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF.Views.SettingsViews"
             mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="10">
            <!-- Main Section -->
            <GroupBox Header="Main"
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <TextBlock Text="Main settings will go here..." />
            </GroupBox>

            <!-- Before Athan Section -->
            <GroupBox Header="Before Athan"
                      Margin="0,10,0,0"
                      Style="{StaticResource MaterialDesignCardGroupBox}">

                <ItemsControl ItemsSource="{Binding BeforeAthanSettings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="5">
                                <TextBlock Text="{Binding PrayerName}"
                                           Width="80"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}" />
                                
                                <CheckBox IsChecked="{Binding IsEnabled}"
                                          Content="Enable"
                                          DockPanel.Dock="Right"
                                          Height="30"
                                          Margin="10,0"
                                          Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Alert time"
                                               VerticalAlignment="Center"
                                               Margin="5,0" />
                                    <ComboBox ItemsSource="{Binding AvailableOffsets}"
                                              SelectedItem="{Binding SelectedOffset}"
                                              Width="80"
                                              Height="30"
                                              Padding="4"
                                              Margin="10,0"
                                              Style="{StaticResource MaterialDesignFilledComboBox}" />

                                    <TextBlock Text="min"
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"
                                               Margin="5,0" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <!-- On Athan Section -->
            <GroupBox Header="On Athan"
                      Margin="0,10,0,0"
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <ItemsControl ItemsSource="{Binding OnAthanSettings}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="5">
                                <TextBlock Text="{Binding PrayerName}"
                                           Width="80"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource MaterialDesignBody2TextBlock}" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Enable alert"
                                               VerticalAlignment="Center"
                                               Margin="5,0" />
                                    
                                    <ToggleButton IsChecked="{Binding IsEnabled}"
                                                  Margin="10,0"
                                                  Style="{StaticResource MaterialDesignSwitchLightToggleButton}" />
                                </StackPanel>
                              
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
        </StackPanel>

    </ScrollViewer>

</UserControl>
