<UserControl x:Class="Tathkīr_WPF.Views.SettingsViews.LocationSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF"
             mc:Ignorable="d" >

    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="{x:Static local:Strings.Select_Location}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,16"
                       Foreground="#333" />
            <!-- Country Dropdown -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,8">
                <TextBlock Text="{x:Static local:Strings.Country}"
                           Width="100"
                           VerticalAlignment="Center"
                           Foreground="#444"
                           FontSize="14"
                           Margin="0,0,8,0" />
                <ComboBox Width="250"
                          IsEditable="True"
                          ItemsSource="{Binding AvailableCountries}"
                          Text="{Binding SelectedCountry, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="{x:Static local:Strings.Search_Or_Select_Country}"
                          GotFocus="ComboBox_GotFocus" />
            </StackPanel>


            <!-- City Dropdown -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,8">
                <TextBlock Text="{x:Static local:Strings.City}"
                           Width="100"
                           VerticalAlignment="Center"
                           Foreground="#444"
                           FontSize="14"
                           Margin="0,0,8,0" />
                <ComboBox Width="250"
                          IsEditable="True"
                          ItemsSource="{Binding AvailableCities}"
                          Text="{Binding SelectedCity, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="{x:Static local:Strings.Search_Or_Select_City}"
                          GotFocus="ComboBox_GotFocus"
                          IsEnabled="{Binding IsCityEnabled}" />
            </StackPanel>
        </StackPanel>

    </ScrollViewer>

</UserControl>
