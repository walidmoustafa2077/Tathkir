<UserControl x:Class="Tathkīr_WPF.Views.SettingsViews.LocationSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:behaviors="clr-namespace:Tathkīr_WPF.Behaviors"
             xmlns:local="clr-namespace:Tathkīr_WPF"
             mc:Ignorable="d"
             Foreground="#1199DD">

    <ScrollViewer Focusable="True"
                  FocusVisualStyle="{x:Null}"
                  behaviors:AutoOpenBehavior.EnableAutoOpen="True">
        <StackPanel>
            <TextBlock Text="{x:Static local:Strings.Select_Location}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,16" />
            <!-- Country Dropdown -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,8">
                <TextBlock Text="{x:Static local:Strings.Country}"
                           Width="100"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,0,8,0" />
                <ComboBox Width="250"
                          ItemsSource="{Binding AvailableCountries.FilteredView}"
                          SelectedItem="{Binding AvailableCountries.SelectedItem}"
                          Text="{Binding AvailableCountries.SearchText, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="True"
                          StaysOpenOnEdit="True"
                          IsTextSearchEnabled="False"
                          behaviors:AutoOpenBehavior.EnableAutoOpen="True"
                          Background="{StaticResource MaterialDesignDarkSeparatorBackground}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="{x:Static local:Strings.Search_Or_Select_Country}" />
            </StackPanel>

            <!-- City Dropdown -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,8">
                <TextBlock Text="{x:Static local:Strings.City}"
                           Width="100"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0,0,8,0" />

                <ComboBox Width="250"
                          ItemsSource="{Binding AvailableCities.FilteredView}"
                          SelectedItem="{Binding AvailableCities.SelectedItem, Mode=TwoWay}"
                          Text="{Binding AvailableCities.SearchText, UpdateSourceTrigger=PropertyChanged}"
                          IsEditable="True"
                          StaysOpenOnEdit="True"
                          IsTextSearchEnabled="False"
                          behaviors:AutoOpenBehavior.EnableAutoOpen="True"
                          Background="{StaticResource MaterialDesignDarkSeparatorBackground}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="{x:Static local:Strings.Search_Or_Select_City}"
                          IsEnabled="{Binding IsCityEnabled}" />
            </StackPanel>
        </StackPanel>

    </ScrollViewer>

</UserControl>
