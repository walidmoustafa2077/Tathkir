<UserControl x:Class="Tathkīr_WPF.Views.GenericViews.PrayerTimesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Tathkīr_WPF"
             mc:Ignorable="d">
    
    <!-- Prayer list -->
    <Border CornerRadius="16"
            Background="{StaticResource MaterialDesignDarkSeparatorBackground}"
            Padding="6">

        <StackPanel>
            <ItemsControl ItemsSource="{Binding PrayerList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="12"
                                Margin="0 2"
                                Effect="{StaticResource MaterialDesignShadowDepth4}">

                            <Border.Background>
                                <MultiBinding Converter="{StaticResource ConditionalBrushConverter}">
                                    <Binding Path="IsNextPrayer" />
                                    <Binding Path="DataContext.SeparatorBackground"
                                             RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                </MultiBinding>
                            </Border.Background>

                            <Grid Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <materialDesign:PackIcon Kind="{Binding Icon}"
                                                         Width="24"
                                                         Height="24"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0" />

                                <!-- Prayer Name -->
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Grid.Column="1" />

                                <!-- Time -->
                                <TextBlock Text="{Binding Time}"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Grid.Column="2" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Midnight and Last Third row -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Opacity="0.8"
                        Height="50">


                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="{x:Static local:Strings.Midnight}"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,4,0" />

                    <TextBlock Text="{Binding MidnightTime}"
                               FontSize="14"
                               FontWeight="Bold" />

                    <TextBlock Text="|"
                               FontSize="14"
                               Margin="18 0" />

                    <TextBlock Text="{x:Static local:Strings.Last_Third}"
                               FontSize="14"
                               FontWeight="Medium"
                               Margin="0,0,4,0" />

                    <TextBlock Text="{Binding LastThirdTime}"
                               FontSize="14"
                               FontWeight="Bold" />
                </StackPanel>

                <Button Command="{Binding ResetDateCommand}"
                        Foreground="Red"
                        Height="25"
                        Width="25"
                        Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Visibility="{Binding ResetDateVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="Restart"
                                             Width="20"
                                             Height="20" />
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0"
                        FlowDirection="LeftToRight">

                <!-- Left Arrow -->
                <Button Command="{Binding PreviousDateCommand}"
                        Padding="4"
                        Margin="0,0,8,0"
                        Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Kind="ChevronLeft"
                                             Width="30"
                                             Height="30" />
                </Button>

                <!-- Date -->
                <TextBlock Text="{Binding CurrentDate}"
                           Width="300"
                           TextAlignment="Center"
                           FontSize="16"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <!-- Right Arrow -->
                <Button Command="{Binding NextDateCommand}"
                        Padding="4"
                        Margin="8,0,0,0"
                        Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Kind="ChevronRight"
                                             Width="30"
                                             Height="30" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
