<UserControl x:Class="Tathkīr_WPF.Views.GenericViews.QuranControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border Padding="16"
            CornerRadius="14">
        <!-- Wrap Grid in a Border for Padding -->
        <Grid>

            <ListView VerticalAlignment="Top"
                      ItemsSource="{Binding Surahs}"
                      SelectedItem="{Binding SelectedSurah, Mode=TwoWay}"
                      PreviewMouseLeftButtonUp="AthkarListView_PreviewMouseLeftButtonUp"
                      Style="{StaticResource MaterialDesignCardsListBox}">

                <!-- Item Container Style -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height"
                                Value="50" />
                        <Setter Property="Background"
                                Value="White" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent"
                                            CornerRadius="16"
                                            Margin="4 2"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          Margin="0 0 0 6"
                                                          RecognizesAccessKey="True" />
                                    </Border>

                                    <!-- Visual states -->
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="#DADADA" />
                                        </Trigger>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="#FFEEEEEE" />
                                            <Setter Property="Foreground"
                                                    Value="Black" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter TargetName="Bd"
                                                    Property="Opacity"
                                                    Value="0.5" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>

                <!-- Items Panel (Grid Layout) -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="6"
                                     Margin="10" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <!-- Item Template -->
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="16"
                                Effect="{DynamicResource MaterialDesignElevation2}">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayName}"
                                           FontFamily="pack://application:,,,/Resources/Fonts/#Amiri Quran"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</UserControl>
